{
  "name": "rollup-libkit",
  "version": "0.0.0",
  "description": "starter template for a rollup library",
  "main": "dist/index",
  "author": "sammy.nave@gmail.com",
  "license": "MIT",
  "module": "dist/index.mjs",
  "sideEffects": false,
  "devDependencies": {
    "agadoo": "^2.0.0",
    "npm-run-all": "latest",
    "rollup": "^2.6.1",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-node-resolve": "^5.0.3",
    "trash-cli": "^3.0.0"
  },
  "scripts": {
    "clean": "trash ./dist",
    "build": "yarn run clean && rollup -c",
    "build:watch": "rollup -c -w ",
    "testSite": "cd ./test-site && yarn dev",
    "dev": "run-s clean && run-p 'build:watch' 'testSite'",
    "test": "node test/index.mjs",
    "pretest": "yarn run build",
    "isTreeShakable": "yarn run agadoo",
    "prepublishOnly": "yarn run build && yarn run isTreeShakable"
  }
}
